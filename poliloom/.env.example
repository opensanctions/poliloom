# Logging configuration
#LOG_LEVEL=INFO

# HuggingFace tokenizers configuration
# Disable tokenizer parallelism to avoid fork-safety warnings
TOKENIZERS_PARALLELISM=false

# Database configuration
# For local development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=poliloom
DB_USER=postgres
DB_PASSWORD=postgres

# Database connection timeout in seconds (default: 30)
# Set higher for large migrations (e.g., 3600 for 1 hour)
DB_POOL_TIMEOUT=30

# For Google Cloud SQL (when using Cloud SQL)
# INSTANCE_CONNECTION_NAME=project:region:instance
# DB_IAM_USER=your-iam-user
# DB_NAME=poliloom

# OpenAI API (for data extraction)
# OPENAI_API_KEY=your-openai-api-key

# MediaWiki OAuth (for API authentication)
# MEDIAWIKI_CONSUMER_KEY=your-consumer-key
# MEDIAWIKI_CONSUMER_SECRET=your-consumer-secret

# Google Cloud Storage (for dump processing)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Archive storage (for web page archiving)
# POLILOOM_ARCHIVE_ROOT=./archives

# Wikidata API (for statement creation)
# WIKIDATA_API_ROOT=https://test.wikidata.org/w/rest.php/wikibase/v1

# Enrichment API (for automatic background enrichment)
# Minimum number of politicians with unevaluated properties before triggering enrichment (default: 10)
MIN_UNEVALUATED_POLITICIANS=10

# Number of politicians to enrich in a single batch when triggered (default: 5)
# ENRICHMENT_BATCH_SIZE=5

# API server configuration
# Number of uvicorn worker processes (default: 8)
# WORKERS=8
